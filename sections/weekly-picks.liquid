{{'weekly-picks.css' | asset_url | stylesheet_tag }}


<div class="weekly-picks">
    <h2 class="weekly-picks-header">Picks of this week</h2>
    <div class="weekly-picks__product-container">
        {% for product in section.settings.collection.products %}
            <div class="weekly-picks-item">
                <a href="{{ product.url }}">

                    <div class="product-bubble bubble--{% if product.tags contains 'New' %}new {% elsif product.tags contains 'fave' %}fave{% else productcompare_at_price != blank %}sale{% endif %}">
                        <span>
                            {% if product.tags contains 'New' %}New 
                            {% elsif product.tags contains 'fave' %}fave 
                            {% else product.compare_at_price != blank %}
                            sale 
                            {% endif %}
                        </span>
                    </div>

                    <div class="weekly-picks-image-wrapper">
                        <img src="{{ product.images[0].src | img_url: 'medium' }}" alt="">
                    </div>

                    <p class="product-title-week">
                        {{ product.title }}
                    </p>

                    <div class="weekly-picks-price">
                        <span class="product-price-week">
                            {{ product.price | money }}
                        </span>
                    </div>

                </a>
                
            </div>
        {% endfor %}
    </div>
</div>

{% schema %}

{
   "name": "Weekly Picks",
   "settings":[
        {
            "type":"collection",
            "id":"collection",
            "label":"Collection"
        }
   ],

   "presets":[
        {
            "name":"Weekly Picks"
        }
   ]
}

{% endschema %}