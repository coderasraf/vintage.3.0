{{'weekly-picks.css' | asset_url | stylesheet_tag }}


<div class="weekly-picks">
    <h2>Picks of this week</h2>
    <div>
        {% for product in section.settings.collection.products %}
            <div>
                <a href="">
                    <p class="product-title-week">
                        {{ product.title }}
                    </p>
                    <div>
                        <span class="product-price-week">
                            {{ product.price | money }}
                        </span>
                    </div>
                </a>
            </div>
        {% endfor %}
    </div>
</div>

{% schema %}

{
   "name": "Weekly Picks",
   "settings":[
        {
            "type":"collection",
            "id":"collection",
            "label":"Collection"
        }
   ],

   "presets":[
        {
            "name":"Weekly Picks"
        }
   ]
}

{% endschema %}